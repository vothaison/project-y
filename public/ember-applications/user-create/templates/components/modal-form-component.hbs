<div class="modal bs-example-modal-sm" role="dialog" tabindex="-1" aria-labelledby="mySmallModalLabel" style="display: none;">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
              {{#unless noButtons}}
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&#739;</span>
                </button>
              {{/unless}}
                <h4 class="modal-title" id="mySmallModalLabel">{{title}}</h4> </div>
            <div class="modal-body">
                {{yield}}
            </div>
            <div class="modal-footer">
                {{#unless noButtons}}
                <button type="button" class="btn btn-default" {{action 'close'}}>Close</button>
                {{/unless}}
            </div>
        </div>
    </div>
</div>
