<div class="row">
    <div class="col-xs-12 col-md-6 col-centered">
        <a class="btn btn-success" style="display: inline-block; margin-bottom: 13px;"
           title="back to user list" href={{global-variable "Data.SessionData.BackUrl"}} >Back</a>

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">{{title}}</h3>
            </div>
            <div class="panel-body" style="padding: 5px 15px">
              <form method="POST" id="register_form">
                  <ul class="alert alert-error hide" id="register-form-error">

                  </ul>
                  <br />
                  <fieldset>
                      <div class="form-group">
                          <label for="LoginName">Login name</label>
                            {{input value=login class="form-control" placeholder="Login name"}}
                      </div>
                      <div class="form-group">
                          <label for="Email" >Email</label>
                          {{input value=email class="form-control" placeholder="Email"}}
                      </div>
                      <div class="form-group">
                          <label for="inputPassword3">Password</label>
                          {{input  type="password" value=password class="form-control" placeholder="Password"}}
                      </div>

                      <div class="control-group">
                          <!-- Button -->
                          <div class="controls">
                              <button class="btn btn-success" {{action 'save'}}>Save</button>
                          </div>
                      </div>
                  </fieldset>
              </form>
            </div>

            <div class="panel-footer"></div>
        </div>
    </div>
</div>
{{modal-dialog-yesno visible=dialogYesNo.visible title=dialogYesNo.title dialogYesNo=dialog.content clickYes=dialogYesNo.clickYes clickYesParam=dialogYesNo.clickYesParam}}
{{modal-dialog dialog=dialogInstance}}